@using InventoryManagement.Application.Constract.Inventory;
@model UpdateInventory




<div class="modal-header">
    <a href="" class="close" data-dismiss="modal" aria-hidden="true">×</a>
    <h4 class="modal-title">Update Inventory </h4>
</div>
<form asp-page="./Index" asp-page-handler="Edit"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh"
      enctype="multipart/form-data">
    <div class="modal-body">

        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="ProductId" class="control-label">Products</label>
                    <select class="form-control" asp-for="ProductId" asp-items='new SelectList(Model.Products,"Id","Name")'>
                        <option value="0">Product ...</option>
                    </select>
                    <span asp-validation-for="ProductId" class="error"></span>
                </div>
            </div>
        </div>

        <input type="hidden" asp-for="Id" value="@Model.Id" />
        
    </div>
    <div class="modal-footer">
        <a href="" type="button" class="btn btn-default waves-effect" data-dismiss="modal">Close</a>
        <button type="submit" class="btn btn-info waves-effect waves-light">Create</button>
    </div>
</form>