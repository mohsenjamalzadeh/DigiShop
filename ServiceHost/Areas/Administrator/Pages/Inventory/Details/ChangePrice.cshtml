@using InventoryManagement.Application.Constract.Inventory;
@model changePrice




<div class="modal-header">
    <a href="" class="close" data-dismiss="modal" aria-hidden="true">×</a>
    <h4 class="modal-title">Change Price </h4>
</div>

<form asp-page="./Index" asp-page-handler="ChangePrice"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh"
      enctype="multipart/form-data">
    <div class="modal-body">

        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="UnitPrice" class="control-label">Unit Price</label>
                    <input type="number" class="form-control" asp-for="UnitPrice">
                    <span asp-validation-for="UnitPrice" class="error"></span>
                </div>
            </div>
        </div>

    </div>






    <input type="hidden" asp-for="InventoryId" value="@Model.InventoryId" />
    <input type="hidden" asp-for="ProductVarientId" value="@Model.ProductVarientId" />

    <div class="modal-footer">
        <a href="" type="button" class="btn btn-default waves-effect" data-dismiss="modal">Close</a>
        <button type="submit" class="btn btn-info waves-effect waves-light">Change</button>
    </div>
</form>


