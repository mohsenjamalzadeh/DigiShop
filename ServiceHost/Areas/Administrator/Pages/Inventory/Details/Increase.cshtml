@using InventoryManagement.Application.Constract.Inventory;
@model Increase





<div class="modal-header">
    <a href="" class="close" data-dismiss="modal" aria-hidden="true">×</a>
    <h4 class="modal-title">Increase </h4>
</div>

<form asp-page="./Index" asp-page-handler="Increase"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh"
      enctype="multipart/form-data">
    <div class="modal-body">


        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="Count" class="control-label">Count</label>
                    <input type="number" class="form-control" asp-for="Count">
                    <span asp-validation-for="Count" class="error"></span>
                </div>
            </div>


        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="form-group no-margin">
                    <label asp-for="Description" class="control-label">Description</label>
                    <textarea class="form-control autogrow" asp-for="Description"
                              style="overflow: hidden; word-wrap: break-word; resize: horizontal; height: 104px;"></textarea>
                    <span asp-validation-for="Description" class="error"></span>
                </div>
            </div>
        </div>
    </div>

    <input type="hidden" asp-for="InventoryId" value="@Model.InventoryId" />
    <input type="hidden" asp-for="ProductVarientId" value="@Model.ProductVarientId" />

    <div class="modal-footer">
        <a href="" type="button" class="btn btn-default waves-effect" data-dismiss="modal">Close</a>
        <button type="submit" class="btn btn-info waves-effect waves-light">Increase</button>
    </div>
</form>

