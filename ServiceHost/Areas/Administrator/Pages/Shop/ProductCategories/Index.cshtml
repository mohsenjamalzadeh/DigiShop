@page
@model ServiceHost.Areas.Administrator.Pages.Shop.ProductCategories.IndexModel
@{
    ViewData["DashbordBar"] = "Product Categories";
}


<div class="row page-titles">
    <ol class="breadcrumb">
        <li class="breadcrumb-item active"><a href="javascript:void(0)">Search Product Categories </a></li>

    </ol>

    <div class="card-body">
        <div class="basic-form">
            <form role="form" method="get">
                <div class="row">
                    <div class="col-sm-4">
                        <input asp-for="searchModel.Name" type="text" class="form-control" placeholder="Product Category Name">
                    </div>
                    <div class="col-sm-4">
                        <button type="submit" class="btn btn-primary mb-2">Serarch</button>
                        <a class="btn btn-primary mb-2" asp-page="./Index">Get All</a>

                    </div>

                </div>
            </form>



        </div>
    </div>
</div>



<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">List Product Categories</h4>
            <a href="#showmodal=@Url.Page("./Index", "Create")" class="btn btn-success mb-2">Create Product Category</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-responsive-md">
                    <thead>
                        <tr>
                            <th style="width:80px;"><strong>#</strong></th>
                            <th><strong>Name</strong></th>
                            <th><strong>CreationDate</strong></th>
                            <th><strong>ModefiedDate</strong></th>
                            <th><strong>Actions</strong></th>


                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.ProductCategories)
                        {

                            <tr>
                                <td><strong>@item.Id</strong></td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <img src="/UploaderFile/@item.Picture" title="@item.PictureTitle" Alt="@item.PictureAlt" class="rounded-lg me-2" alt="" width="35">
                                        <span class="w-space-no">@item.Name</span>
                                    </div>
                                </td>
                                <td>@item.CreationDate</td>
                                <td>@item.ModefiedDate</td>

                                <td>
                                    <a href="#showmodal=@Url.Page("./Index", "Edit", new { id = item.Id})" class="btn btn-primary shadow btn-xs sharp me-1"><i class="fa fa-pencil"></i></a>
                                </td>
                            </tr>

                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>